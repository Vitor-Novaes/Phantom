<div class="scaffold">
<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Treino</h1>

  <table class="treinos">
    <thead>
      <tr>
        <th>Dia</th>
        <th>Horario</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @treinamentos.each do |treinamento| %>
        <tr>
          <td><%= treinamento.dia %></td>
          <td><%= treinamento.horario %></td>
          <td><%= link_to 'Show', treinamento, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_treinamento_path(treinamento), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', treinamento, method: :delete, data: { confirm: 'Tem certeza?' } , class: 
          "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Treinamento', new_treinamento_path, class: "btn btn-dark" %>
</div>
</div>